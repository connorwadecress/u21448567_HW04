<head>
    <style>
        .flip-card {
            background-color: transparent;
            width: 300px;
            height: 300px;
            perspective: 1000px;
            display: flex;
            position: relative;
            margin-bottom:50px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front,
        .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
            border-radius: 16px;
        }

        .flip-card-front {
            background-image: linear-gradient(45deg, #6f04d9, #d9048e);
        }

            .flip-card-front img {
                height:300px;
                width:300px;
            }

            .flip-card-front h3 {
                position:fixed;
            }


        .flip-card-back {
            background-image: linear-gradient( 315deg, #6f04d9, #8a045c );
            color: white;
            transform: rotateY(180deg);
        }

            .flip-card-back h3 {
                margin-bottom: 0.3rem;
            }

            .flip-card-back h1 {
                margin: 0;
            }
    </style>
</head>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron jumbotron-fluid" style="background-color: #FFE69A">
    <div class="container">
        <h1 class="display-4">Current Workers</h1>
        <p class="lead">Ready for Employment!</p>
    </div>
</div>


